#include <stdio.h>
#include <unistd.h>

int print_bar(double t);
int main()
{
  double taskcompleted;

  taskcompleted = 0;

  while (taskcompleted < 10)
  {
    print_bar(taskcompleted);
    taskcompleted++;
    //sleep(10);
  }
  return (0);
}


int print_bar(double taskcompleted)
{
  double numtasks;
  int i;

  i = 0;
  numtasks = 76;
  double position = (taskcompleted / numtasks) * 100;
  printf("{");
  while (i < numtasks)
  {
    if ( i < position)
      printf(">");
    if (i == position)
      printf(">");
    if (i > position)
      printf(" ");
    i++;
  }
  printf("}");
  printf(" %f\n", position);
  return (0);
}
